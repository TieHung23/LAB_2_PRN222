@page
@model EVDMS.Presentation.Pages.Admin.Customers.CreateModel
@{
    Layout = "/Pages/Shared/_AdminLayout.cshtml"; // Chỉ định layout admin
    ViewData["Title"] = "Create Customer";
}

<div class="page-header">
    <div class="container">
        <h1><i class="fas fa-user-plus me-3"></i>@ViewData["Title"]</h1>
        <p>Add a new customer profile to the system.</p>
    </div>
</div>

<div class="admin-page-content">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="admin-card">
                <form method="post">
                    <div class="card-header">
                        <h5 class="mb-0">New Customer Details</h5>
                    </div>
                    <div class="card-body p-4">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                        }

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Customer.FullName" class="form-label">Full Name *</label>
                                <input asp-for="Customer.FullName" class="form-control form-control-sm" required />
                                <span asp-validation-for="Customer.FullName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Customer.PhoneNumber" class="form-label">Phone Number *</label>
                                <input asp-for="Customer.PhoneNumber" type="tel" class="form-control form-control-sm" required />
                                <span asp-validation-for="Customer.PhoneNumber" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Customer.Email" class="form-label">Email *</label>
                                <input asp-for="Customer.Email" type="email" class="form-control form-control-sm" required />
                                <span asp-validation-for="Customer.Email" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Customer.IdCardNumber" class="form-label">ID Card Number *</label>
                                <input asp-for="Customer.IdCardNumber" class="form-control form-control-sm" required />
                                <span asp-validation-for="Customer.IdCardNumber" class="text-danger small"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Customer.Address" class="form-label">Address *</label>
                                <input asp-for="Customer.Address" class="form-control form-control-sm" required />
                                <span asp-validation-for="Customer.Address" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-end p-3">
                        <a asp-page="../Customers" class="btn btn-sm btn-secondary me-2">
                            <i class="fas fa-arrow-left me-1"></i>Back to List
                        </a>
                        <button type="submit" class="btn btn-sm btn-primary">
                            <i class="fas fa-save me-1"></i>Create Customer
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
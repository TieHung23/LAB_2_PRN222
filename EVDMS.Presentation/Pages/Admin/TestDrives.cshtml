@page
@model EVDMS.Presentation.Pages.Admin.TestDrivesModel
@{
    Layout = "Shared/_AdminLayout";
    ViewData["Title"] = "Test Drives";
}

<div class="page-header">
    <div class="container">
        <h1><i class="fas fa-road me-3"></i>@ViewData["Title"]</h1>
        <p class="mb-0">Manage all scheduled customer test drives and track completion status.</p>
    </div>
</div>

<div class="admin-page-content">
    <div class="row">
        <div class="col-12">
            <div class="admin-card">
                <div class="card-header d-flex align-items-center justify-content-between p-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="fas fa-list-ul me-2"></i>Test Drive Schedule
                    </h5>
                </div>
                <div class="card-body p-4">

                    <div class="row mb-3">
                        <div class="col-md-3">
                            <input type="text" class="form-control form-control-sm" placeholder="Search by customer...">
                        </div>
                        <div class="col-md-3">
                            <input type="date" class="form-control form-control-sm">
                        </div>
                        <div class="col-md-3">
                            <select class="form-select form-select-sm">
                                <option selected>All Statuses</option>
                                <option value="1">Pending</option>
                                <option value="2">Completed</option>
                                <option value="3">Cancelled</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <button class="btn btn-sm btn-outline-secondary w-100">Filter</button>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover table-striped admin-table">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col">Customer Name</th>
                                    <th scope="col">Phone Number</th>
                                    <th scope="col">Vehicle Model</th>
                                    <th scope="col">Scheduled Time</th>
                                    <th scope="col">Status</th>
                                    <th scope="col" class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>John Smith</td>
                                    <td>090-123-4567</td>
                                    <td>VinFast VF8 Eco</td>
                                    <td>Oct 18, 2025 10:00 AM</td>
                                    <td><span class="badge bg-warning bg-opacity-75">Pending</span></td>
                                    <td class="text-center">
                                        <a href="#" class="btn btn-sm btn-outline-success" title="Mark as Completed"><i class="fas fa-check"></i></a>
                                        <a href="#" class="btn btn-sm btn-outline-danger" title="Cancel"><i class="fas fa-times"></i></a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Maria Garcia</td>
                                    <td>091-222-3333</td>
                                    <td>VinFast VF9 Plus</td>
                                    <td>Oct 17, 2025 02:00 PM</td>
                                    <td><span class="badge bg-success bg-opacity-75">Completed</span></td>
                                    <td class="text-center">
                                        <a href="#" class="btn btn-sm btn-outline-info" title="View Details"><i class="fas fa-eye"></i></a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>David Kim</td>
                                    <td>098-765-4321</td>
                                    <td>VinFast VFe34</td>
                                    <td>Oct 17, 2025 09:00 AM</td>
                                    <td><span class="badge bg-secondary bg-opacity-75">Cancelled</span></td>
                                    <td class="text-center">
                                        <a href="#" class="btn btn-sm btn-outline-info" title="View Details"><i class="fas fa-eye"></i></a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .admin-table th {
            font-weight: 600;
            font-size: 0.8rem;
            text-transform: uppercase;
            color: #475569;
        }

        .admin-table td {
            vertical-align: middle;
            font-size: 0.875rem;
        }

        .admin-table .btn-sm {
            width: 32px;
            height: 32px;
            line-height: 1.5;
            padding: 0.25rem 0.5rem;
            font-size: 0.75rem;
        }

        .badge {
            font-size: 0.75rem;
            padding: 0.4em 0.7em;
            border-radius: 8px;
            font-weight: 500;
        }
    </style>
}
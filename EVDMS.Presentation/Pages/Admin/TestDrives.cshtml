@page
@model EVDMS.Presentation.Pages.Admin.TestDrivesModel
@{
    Layout = "Shared/_AdminLayout";
    ViewData["Title"] = "Test Drives";
}

<div class="page-header">
    <div class="container">
        <h1><i class="fas fa-road me-3"></i>@ViewData["Title"]</h1>
        <p class="mb-0">Manage all scheduled customer test drives and track completion status.</p>
    </div>
</div>

<div class="admin-page-content">
    @if( TempData["SuccessMessage"] != null )
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if( TempData["ErrorMessage"] != null )
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="admin-card">
        <div class="card-header d-flex align-items-center justify-content-between p-3">
            <h5 class="mb-0 fw-bold">
                <i class="fas fa-list-ul me-2"></i>Test Drive Schedule
            </h5>
        </div>
        <div class="card-body p-4">

            <form method="get">
                <div class="row mb-3 g-2">
                    <div class="col-md">
                        <input name="searchTerm" type="text" class="form-control form-control-sm" placeholder="Search by customer...">
                    </div>
                    <div class="col-md">
                        <input name="searchDate" type="date" class="form-control form-control-sm">
                    </div>
                    <div class="col-md">
                        <select name="statusFilter" class="form-select form-select-sm">
                            <option value="">All Statuses</option>
                            <option value="pending">Pending</option>
                            <option value="completed">Completed</option>
                            <option value="cancelled">Cancelled</option>
                        </select>
                    </div>
                    <div class="col-md-auto">
                        <button class="btn btn-sm btn-outline-secondary w-100" type="submit">
                            <i class="fas fa-filter me-1"></i>Filter
                        </button>
                    </div>
                </div>
            </form>

            <div class="table-responsive">
                <table class="table table-hover table-striped admin-table align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Customer Info</th>
                            <th>Vehicle Model</th>
                            <th>Scheduled Time</th>
                            <th class="text-center">Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if( Model.TestDrives == null || !Model.TestDrives.Any() )
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted py-4">
                                    <i class="fas fa-info-circle me-2"></i>No test drives found.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach( var item in Model.TestDrives )
                            {
                                <tr>
                                    <td>
                                        <div class="fw-bold">@item.Customer?.FullName</div>
                                        <small class="text-muted">@item.Customer?.PhoneNumber</small>
                                    </td>
                                    <td>@item.VehicleModel?.ModelName</td>
                                    <td>@item.ScheduledDateTime?.ToString( "dd MMM yyyy, hh:mm tt" )</td>
                                    <td class="text-center">
                                        @if( item.IsSuccess )
                                        {
                                            <span class="badge bg-success bg-opacity-75">Completed</span>
                                        }
                                        else if( !item.IsActive )
                                        {
                                            <span class="badge bg-secondary bg-opacity-75">Cancelled</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning bg-opacity-75">Pending</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if( item.IsActive && !item.IsSuccess )
                                        {
                                            <form method="post" asp-page-handler="Complete" asp-route-id="@item.Id" style="display: inline;"
                                                  onsubmit="return confirm('Mark this test drive as completed?');">
                                                <button type="submit" class="btn btn-sm btn-outline-success" title="Mark as Completed">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                                @Html.AntiForgeryToken()
                                            </form>

                                            <form method="post" asp-page-handler="Cancel" asp-route-id="@item.Id" style="display: inline;"
                                                  onsubmit="return confirm('Are you sure you want to cancel this test drive?');">
                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Cancel">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                                @Html.AntiForgeryToken()
                                            </form>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-outline-secondary" disabled title="No actions available"><i class="fas fa-eye-slash"></i></button>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .admin-table th {
            font-weight: 600;
            font-size: 0.8rem;
            text-transform: uppercase;
            color: #475569;
        }

        .admin-table td {
            vertical-align: middle;
            font-size: 0.875rem;
        }

        .admin-table .btn-sm {
            width: 32px;
            height: 32px;
            line-height: 1.5;
            padding: 0.25rem 0.5rem;
            font-size: 0.75rem;
        }

        .badge {
            font-size: 0.75rem;
            padding: 0.4em 0.7em;
            border-radius: 8px;
            font-weight: 500;
        }
    </style>
}
@page
@model OrdersModel
@{
    Layout = "Shared/_AdminLayout";
    ViewData["Title"] = "Order Management";
}

<div class="page-header">
    <h1><i class="fas fa-shopping-cart me-3"></i>@ViewData["Title"]</h1>
    <p>View and manage all sales orders from all dealerships.</p>
</div>

<div class="admin-page-content">
    <div class="admin-card">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0 fw-bold"><i class="fas fa-list-ul me-2"></i>Order List</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                    <tr>
                        <th>Order ID</th>
                        <th>Customer</th>
                        <th>Dealer</th>
                        <th>Vehicle</th>
                        <th>Total Amount</th>
                        <th class="text-end">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @if (Model.Orders == null || !Model.Orders.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">
                                <i class="fas fa-info-circle me-2"></i>No orders found.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var order in Model.Orders)
                        {
                            <tr>
                                <td class="fw-semibold">@order.Id</td>
                                <td>@order.Customer?.FullName</td>
                                <td class="text-end">
                                    <button class="btn btn-sm btn-outline-primary" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
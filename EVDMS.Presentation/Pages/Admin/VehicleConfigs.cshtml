@page
@model EVDMS.Presentation.Pages.Admin.VehicleConfigsModel
@{
    Layout = "Shared/_AdminLayout";
    ViewData["Title"] = "Vehicle Configs";
}

<div class="page-header">
    <div class="container">
        <h1><i class="fas fa-cogs me-3"></i>@ViewData["Title"]</h1>
        <p class="mb-0">Manage vehicle versions, colors, interiors, and pricing.</p>
    </div>
</div>

<div class="admin-page-content">
    <div class="row">
        <div class="col-12">
            <div class="admin-card">
                <div class="card-header d-flex align-items-center justify-content-between p-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="fas fa-list-ul me-2"></i>Configuration List
                    </h5>
                    <a href="#" class="btn btn-sm btn-primary bg-gradient">
                        <i class="fas fa-plus me-1"></i> Add New Config
                    </a>
                </div>
                <div class="card-body p-4">

                    <div class="table-responsive">
                        <table class="table table-hover table-striped admin-table">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col">Version Name</th>
                                    <th scope="col">Color</th>
                                    <th scope="col">Interior</th>
                                    <th scope="col">Base Price</th>
                                    <th scope="col">Warranty (Months)</th>
                                    <th scope="col" class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>VF8 Eco</td>
                                    <td>Deep Blue</td>
                                    <td>Beige Vegan Leather</td>
                                    <td>$45,000</td>
                                    <td>120</td>
                                    <td class="text-center">
                                        <a href="#" class="btn btn-sm btn-outline-warning" title="Edit"><i class="fas fa-edit"></i></a>
                                        <a href="#" class="btn btn-sm btn-outline-danger" title="Delete"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>VF9 Plus</td>
                                    <td>Crimson Red</td>
                                    <td>Black Vegan Leather</td>
                                    <td>$62,000</td>
                                    <td>120</td>
                                    <td class="text-center">
                                        <a href="#" class="btn btn-sm btn-outline-warning" title="Edit"><i class="fas fa-edit"></i></a>
                                        <a href="#" class="btn btn-sm btn-outline-danger" title="Delete"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>VFe34</td>
                                    <td>White</td>
                                    <td>Black Fabric</td>
                                    <td>$30,000</td>
                                    <td>84</td>
                                    <td class="text-center">
                                        <a href="#" class="btn btn-sm btn-outline-warning" title="Edit"><i class="fas fa-edit"></i></a>
                                        <a href="#" class="btn btn-sm btn-outline-danger" title="Delete"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .admin-table th {
            font-weight: 600;
            font-size: 0.8rem;
            text-transform: uppercase;
            color: #475569;
        }

        .admin-table td {
            vertical-align: middle;
            font-size: 0.875rem;
        }

        .admin-table .btn-sm {
            width: 32px;
            height: 32px;
            line-height: 1.5;
            padding: 0.25rem 0.5rem;
            font-size: 0.75rem;
        }
    </style>
}
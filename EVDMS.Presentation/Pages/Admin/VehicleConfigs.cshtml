@page
@model EVDMS.Presentation.Pages.Admin.VehicleConfigsModel
@{
    Layout = "Shared/_AdminLayout";
    ViewData["Title"] = "Vehicle Configs";
}

<div class="page-header">
    <div class="container">
        <h1><i class="fas fa-cogs me-3"></i>@ViewData["Title"]</h1>
        <p class="mb-0">Manage vehicle versions, colors, interiors, and pricing.</p>
    </div>
</div>

<div class="admin-page-content">
    <div class="container">

        @if (TempData["success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show rounded-4" role="alert">
                <i class="fas fa-check-circle me-2"></i> @TempData["success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show rounded-4" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i> @TempData["error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm border-0 rounded-4">
                    <div class="card-header bg-light border-0 d-flex align-items-center justify-content-between p-3 rounded-top-4">
                        <h5 class="mb-0 fw-bold text-muted">
                            <i class="fas fa-list-ul me-2"></i>Configuration List
                        </h5>
                        <button type="button" class="btn btn-sm btn-primary bg-gradient rounded-pill px-3" data-bs-toggle="modal" data-bs-target="#addConfigModal">
                            <i class="fas fa-plus me-1"></i> Add New Config
                        </button>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover table-borderless mb-0 admin-table">
                                <thead class="border-bottom">
                                    <tr>
                                        <th scope="col" class="py-3 ps-4">Version Name</th>
                                        <th scope="col" class="py-3">Color</th>
                                        <th scope="col" class="py-3">Interior</th>
                                        <th scope="col" class="py-3">Base Price</th>
                                        <th scope="col" class="py-3">Warranty (Months)</th>
                                        <th scope="col" class="py-3 text-center">Assigned To Model</th>
                                        <th scope="col" class="py-3 text-center pe-4">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var config in Model.Configs)
                                    {
                                        <tr class="align-middle">
                                            <td class="ps-4">@config.VersionName</td>
                                            <td>@config.Color</td>
                                            <td>@config.InteriorType</td>
                                            <td>@config.BasePrice.ToString("C0")</td>
                                            <td>@config.WarrantyPeriod</td>
                                            <td class="text-center">
                                                @if (config.VehicleModel != null)
                                                {
                                                    <span class="badge bg-success bg-opacity-10 text-success fw-normal border border-success border-opacity-10 rounded-pill">@config.VehicleModel.ModelName</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary bg-opacity-10 text-secondary fw-normal border border-secondary border-opacity-10 rounded-pill">Unassigned</span>
                                                }
                                            </td>
                                            <td class="text-center pe-4">
                                                <button type="button" class="btn btn-sm btn-outline-primary rounded-pill px-3 edit-btn" title="Edit"
                                                        data-bs-toggle="modal" data-bs-target="#editConfigModal" data-id="@config.Id">
                                                    Edit
                                                </button>
                                                <form method="post" asp-page-handler="Delete" asp-route-id="@config.Id" class="d-inline"
                                                      onsubmit="return confirm('Are you sure you want to delete this configuration?');">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill px-3" title="Delete">
                                                        Delete
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addConfigModal" tabindex="-1" aria-labelledby="addConfigModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content rounded-4 border-0 shadow">
            <form method="post" asp-page-handler="Create">
                <div class="modal-header border-0">
                    <h5 class="modal-title fw-bold" id="addConfigModalLabel">Add New Vehicle Configuration</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body px-4">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="VehicleConfig.VersionName" class="form-label">Version Name</label>
                            <input type="text" asp-for="VehicleConfig.VersionName" class="form-control" required>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="SelectedVehicleModelId" class="form-label">Assign to Vehicle Model</label>
                            <select asp-for="SelectedVehicleModelId" asp-items="Model.VehicleModels" class="form-select" required>
                                <option value="">-- Select a model --</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="VehicleConfig.Color" class="form-label">Color</label>
                            <input type="text" asp-for="VehicleConfig.Color" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label asp-for="VehicleConfig.InteriorType" class="form-label">Interior Type</label>
                            <input type="text" asp-for="VehicleConfig.InteriorType" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label asp-for="VehicleConfig.BasePrice" class="form-label">Base Price</label>
                            <input type="number" asp-for="VehicleConfig.BasePrice" class="form-control" required min="1">
                        </div>
                        <div class="col-md-6">
                            <label asp-for="VehicleConfig.WarrantyPeriod" class="form-label">Warranty (Months)</label>
                            <input type="number" asp-for="VehicleConfig.WarrantyPeriod" class="form-control" min="0">
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-light rounded-pill" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary rounded-pill px-4">Save Configuration</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="editConfigModal" tabindex="-1" aria-labelledby="editConfigModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content rounded-4 border-0 shadow">
            <form method="post" asp-page-handler="Update">
                <div class="modal-header border-0">
                    <h5 class="modal-title fw-bold" id="editConfigModalLabel">Edit Vehicle Configuration</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body px-4">
                    <input type="hidden" asp-for="VehicleConfig.Id" id="edit-id" />
                    <div class="row g-3">
                        <div class="col-12">
                            <label asp-for="VehicleConfig.VersionName" class="form-label">Version Name</label>
                            <input type="text" asp-for="VehicleConfig.VersionName" class="form-control" required id="edit-versionName">
                        </div>
                        <div class="col-md-6">
                            <label asp-for="VehicleConfig.Color" class="form-label">Color</label>
                            <input type="text" asp-for="VehicleConfig.Color" class="form-control" id="edit-color">
                        </div>
                        <div class="col-md-6">
                            <label asp-for="VehicleConfig.InteriorType" class="form-label">Interior Type</label>
                            <input type="text" asp-for="VehicleConfig.InteriorType" class="form-control" id="edit-interiorType">
                        </div>
                        <div class="col-md-6">
                            <label asp-for="VehicleConfig.BasePrice" class="form-label">Base Price</label>
                            <input type="number" asp-for="VehicleConfig.BasePrice" class="form-control" required min="1" id="edit-basePrice">
                        </div>
                        <div class="col-md-6">
                            <label asp-for="VehicleConfig.WarrantyPeriod" class="form-label">Warranty (Months)</label>
                            <input type="number" asp-for="VehicleConfig.WarrantyPeriod" class="form-control" min="0" id="edit-warrantyPeriod">
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-light rounded-pill" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary rounded-pill px-4">Update Configuration</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .admin-table th {
            font-weight: 600;
            font-size: 0.8rem;
            text-transform: uppercase;
            color: #6c757d; /* Muted text color */
        }

        .admin-table td {
            font-size: 0.9rem;
            color: #495057;
        }

        /* Removing default hover color to use the table-hover class */
        .admin-table tbody tr:hover {
            background-color: #f8f9fa;
        }

        .form-control, .form-select {
            border-radius: 0.5rem;
        }
    </style>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var editModal = document.getElementById('editConfigModal');
            editModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                var configId = button.getAttribute('data-id');

                fetch(`?handler=VehicleConfig&id=${configId}`)
                    .then(response => response.json())
                    .then(data => {
                        document.getElementById('edit-id').value = data.id;
                        document.getElementById('edit-versionName').value = data.versionName;
                        document.getElementById('edit-color').value = data.color;
                        document.getElementById('edit-interiorType').value = data.interiorType;
                        document.getElementById('edit-basePrice').value = data.basePrice;
                        document.getElementById('edit-warrantyPeriod').value = data.warrantyPeriod;
                    })
                    .catch(error => console.error('Error loading config data:', error));
            });
        });
    </script>
}
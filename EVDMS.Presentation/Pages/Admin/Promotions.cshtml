@page
@model EVDMS.Presentation.Pages.Admin.PromotionsModel
@{
    Layout = "Shared/_AdminLayout";
    ViewData["Title"] = "Promotion Management";
}

<div class="page-header">
    <div class="container">
        <h1><i class="fas fa-tags me-3"></i>@ViewData["Title"]</h1>
        <p>Create and manage promotions and discount policies.</p>
    </div>
</div>

<div class="admin-page-content">
    @if( TempData["SuccessMessage"] != null )
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if( TempData["ErrorMessage"] != null )
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="admin-card">
        <div class="card-header d-flex align-items-center justify-content-between p-3">
            <h5 class="mb-0 fw-bold"><i class="fas fa-list-ul me-2"></i>Promotion List</h5>

            <a asp-page="./Promotions/Create" class="btn btn-sm btn-primary bg-gradient">
                <i class="fas fa-plus me-1"></i>Create New Promotion
            </a>
        </div>
        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-hover table-striped admin-table align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Promotion Name</th>
                            <th>Code</th>
                            <th class="text-center">Discount</th>
                            <th class="text-center">Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if( Model.Promotions == null || !Model.Promotions.Any() )
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted py-4">
                                    <i class="fas fa-info-circle me-2"></i>No promotions found.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach( var promo in Model.Promotions )
                            {
                                <tr>
                                    <td class="fw-bold">@promo.Name</td>
                                    <td>
                                        <span class="badge bg-secondary bg-opacity-75 font-monospace">@promo.Code</span>
                                    </td>
                                    <td class="text-center fw-semibold">@promo.PercentDiscount%</td>
                                    <td class="text-center">
                                        @if( promo.IsActive )
                                        {
                                            <span class="badge bg-success bg-opacity-75">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary bg-opacity-75">Inactive</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a asp-page="./Promotions/Edit" asp-route-id="@promo.Id" class="btn btn-sm btn-outline-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>

                                        <form method="post" asp-page-handler="Delete" asp-route-id="@promo.Id" style="display: inline;"
                                              onsubmit="return confirm('Are you sure you want to delete this promotion?');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                            @Html.AntiForgeryToken()
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .admin-table th {
            font-weight: 600;
            font-size: 0.8rem;
            text-transform: uppercase;
            color: #475569;
        }

        .admin-table td {
            vertical-align: middle;
            font-size: 0.875rem;
        }

        .admin-table .btn-sm {
            width: 32px;
            height: 32px;
            line-height: 1.5;
            padding: 0.25rem 0.5rem;
            font-size: 0.75rem;
        }

        .badge {
            font-size: 0.75rem;
            padding: 0.4em 0.7em;
            border-radius: 8px;
            font-weight: 500;
        }
    </style>
}
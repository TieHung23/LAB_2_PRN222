@page
@model EVDMS.Presentation.Pages.Admin.InventoryModel
@{
    Layout = "Shared/_AdminLayout";
    ViewData["Title"] = "Inventory Management";
}

<div class="page-header">
    <h1><i class="fas fa-warehouse me-3"></i>@ViewData["Title"]</h1>
    <p>Manage vehicle stock levels for the central warehouse and all dealerships.</p>
</div>

<div class="admin-page-content">
    <div class="admin-card">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0 fw-bold"><i class="fas fa-list-ul me-2"></i>Inventory List</h5>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#inventoryModal">
                <i class="fas fa-plus me-2"></i>Add Stock
            </button>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Vehicle Config</th>
                            <th>Dealer</th>
                            <th>Stock Quantity</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Inventories == null || !Model.Inventories.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted">
                                    <i class="fas fa-info-circle me-2"></i>No inventory found.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model.Inventories)
                            {
                                <tr>
                                    <td class="fw-semibold">@(item.VehicleConfig?.VehicleModel.ModelName) - @(item.VehicleConfig?.VersionName) (@(item.VehicleConfig?.Color))</td>
                                    <td>@(item.Dealer?.Name ?? "Central Warehouse")</td>
                                    <td>@item.StockQuantity</td>
                                    <td class="text-end">
                                        <button class="btn btn-sm btn-outline-primary" title="Edit Stock">
                                            <i class="fas fa-pencil-alt"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="inventoryModal" tabindex="-1" aria-labelledby="inventoryModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form method="post">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="inventoryModalLabel"><i class="fas fa-warehouse me-2"></i>Add/Edit Stock</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" asp-for="Inventory.Id" />
                    <div class="mb-3">
                        <label asp-for="Inventory.VehicleConfigId" class="form-label">Vehicle Configuration</label>
                        <select asp-for="Inventory.VehicleConfigId" class="form-select">
                            <option value="">-- Select Config --</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Inventory.DealerId" class="form-label">Dealer</label>
                        <select asp-for="Inventory.DealerId" class="form-select">
                            <option value="">-- Central Warehouse (No Dealer) --</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Inventory.StockQuantity" class="form-label">Stock Quantity</label>
                        <input asp-for="Inventory.StockQuantity" type="number" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
@page
@model EVDMS.Presentation.Pages.Admin.InventoryModel
@{
    Layout = "Shared/_AdminLayout";
    ViewData["Title"] = "Inventory Management";
}

@* Add Anti-Forgery Token for AJAX security *@
@Html.AntiForgeryToken()

<div class="page-header">
    <div class="container"> 
        <h1><i class="fas fa-warehouse me-3"></i>@ViewData["Title"]</h1>
        <p>Manage vehicle stock levels for the central warehouse and all dealerships.</p>
    </div>
</div>

<div class="admin-page-content">
    @if( TempData["SuccessMessage"] != null )
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if( TempData["ErrorMessage"] != null )
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="admin-card">
        <div class="card-header d-flex align-items-center justify-content-between p-3">
            <h5 class="mb-0 fw-bold"><i class="fas fa-list-ul me-2"></i>Inventory List</h5>
            <a asp-page="./Inventory/Create" class="btn btn-sm btn-primary bg-gradient">
                <i class="fas fa-plus me-1"></i>Create New Stock
            </a>
        </div>
        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-hover table-striped admin-table align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Vehicle</th>
                            <th>Color</th>
                            <th>Dealer / Warehouse</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if( Model.Inventories == null || !Model.Inventories.Any() )
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted py-4">
                                    <i class="fas fa-info-circle me-2"></i>No inventory records found.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach( var item in Model.Inventories )
                            {
                                <tr>
                                    <td>
                                        <div class="fw-bold">@item.VehicleName</div>
                                        <small class="text-muted">@item.VehicleModel</small>
                                    </td>
                                    <td>@item.Color</td>
                                    <td>
                                        @if( string.IsNullOrEmpty( item.DealerName ) )
                                        {
                                            <span class="badge bg-secondary bg-opacity-75"><i class="fas fa-warehouse me-1"></i> Central Warehouse</span>
                                        }
                                        else
                                        {
                                            @item.DealerName
                                        }
                                    </td>
                                    <td class="text-center">
                                        <button class="btn btn-sm btn-outline-warning edit-btn" data-id="@item.Id" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </button>

                                        <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" style="display: inline;"
                                              onsubmit="return confirm('Are you sure you want to delete this stock record?');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                            @Html.AntiForgeryToken()
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .admin-table th {
            font-weight: 600;
            font-size: 0.8rem;
            text-transform: uppercase;
            color: #475569;
        }

        .admin-table td {
            vertical-align: middle;
            font-size: 0.875rem;
        }

        .admin-table .btn-sm {
            width: 32px;
            height: 32px;
            line-height: 1.5;
            padding: 0.25rem 0.5rem;
            font-size: 0.75rem;
        }

        .badge {
            font-size: 0.75rem;
            padding: 0.4em 0.7em;
            border-radius: 8px;
            font-weight: 500;
        }
    </style>
}


@section Scripts {
    <script>
        $(document).ready(function () {
            const inventoryModal = new bootstrap.Modal(document.getElementById('inventoryModal'));
            const form = $('#inventoryForm');
            const modalLabel = $('#inventoryModalLabel');

            // --- Handle Add Button Click ---
            $('#addStockBtn').on('click', function () {
                modalLabel.html('<i class="fas fa-box-open me-2"></i> Add New Stock');
                form[0].reset();
                $('#Inventory_Id').val('0');
                inventoryModal.show();
            });

            // --- Handle Edit Button Click ---
            $('.edit-btn').on('click', function () {
                const inventoryId = $(this).data('id');
                modalLabel.html('<i class="fas fa-edit me-2"></i> Edit Stock');

                $.ajax({
                    url: `?handler=InventoryForEdit&id=${inventoryId}`,
                    type: 'GET',
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (data) {
                        $('#Inventory_Id').val(data.id);
                        $('#Inventory_VehicleConfigurationId').val(data.vehicleConfigurationId);
                        $('#Inventory_DealerId').val(data.dealerId || '');
                        $('#Inventory_StockQuantity').val(data.stockQuantity);
                        inventoryModal.show();
                    },
                    error: function () {
                        alert('Error fetching inventory data.');
                    }
                });
            });

            // The delete button is now handled by a standard form submission, so the JS handler is no longer needed.
        });
    </script>
}
}
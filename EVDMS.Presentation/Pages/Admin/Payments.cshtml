@page
@model EVDMS.Presentation.Pages.Admin.PaymentsModel
@{
    Layout = "Shared/_AdminLayout";
    ViewData["Title"] = "Payment Management";
}

<div class="page-header">
    <h1><i class="fas fa-credit-card me-3"></i>@ViewData["Title"]</h1>
    <p>View all payment records associated with orders.</p>
</div>

<div class="admin-page-content">
    <div class="admin-card">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0 fw-bold"><i class="fas fa-list-ul me-2"></i>Payment List</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Payment ID</th>
                            <th>Order ID</th>
                            <th>Amount</th>
                            <th>Method</th>
                            <th>Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Payments == null || !Model.Payments.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted">
                                    <i class="fas fa-info-circle me-2"></i>No payments found.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var payment in Model.Payments)
                            {
                                <tr>
                                    <td class="fw-semibold">@payment.Id</td>
                                    <td>@payment.OrderId</td>
                                    <td>@payment.PaymentMethod</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
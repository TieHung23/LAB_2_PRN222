@page
@model EVDMS.Presentation.Pages.Admin.FeedbackModel
@{
    Layout = "Shared/_AdminLayout";
    ViewData["Title"] = "Customer Feedback";
}

<div class="page-header">
    <h1><i class="fas fa-comments me-3"></i>@ViewData["Title"]</h1>
    <p>View customer feedback and complaints.</p>
</div>

<div class="admin-page-content">
    <div class="admin-card">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0 fw-bold"><i class="fas fa-list-ul me-2"></i>Feedback List</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Customer</th>
                            <th>Feedback Detail</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Feedbacks == null || !Model.Feedbacks.Any())
                        {
                            <tr>
                                <td colspan="2" class="text-center text-muted">
                                    <i class="fas fa-info-circle me-2"></i>No feedback found.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var feedback in Model.Feedbacks)
                            {
                                <tr>
                                    <td>@feedback.Customer?.FullName</td>
                                    <td>@feedback.Detail</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
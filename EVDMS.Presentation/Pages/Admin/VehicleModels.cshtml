@page
@model EVDMS.Presentation.Pages.Admin.VehicleModelsModel
@{
    ViewData["Title"] = "Vehicle Model Management";
    Layout = "_AdminLayout";
}

<div class="page-header">
    <div class="container">
        <h1><i class="fas fa-car me-3"></i>@ViewData["Title"]</h1>
        <p>Manage all vehicle models available in the system.</p>
    </div>
</div>

<div class="admin-page-content">
    @if( !string.IsNullOrEmpty( Model.SuccessMessage ) )
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if( !string.IsNullOrEmpty( Model.ErrorMessage ) )
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="admin-card">
        <div class="card-header d-flex align-items-center justify-content-between p-3">
            <h5 class="mb-0 fw-bold"><i class="fas fa-list-ul me-2"></i>Vehicle Model List</h5>
            <div class="d-flex align-items-center">
                <form method="get" class="d-flex me-2">
                    <input class="form-control form-control-sm" type="search" placeholder="Search..." asp-for="SearchTerm">
                    <button class="btn btn-sm btn-outline-secondary" type="submit" style="margin-left: -1px; border-radius: 0 0.25rem 0.25rem 0;">
                        <i class="fas fa-search"></i>
                    </button>
                </form>
                <a asp-page="./VehicleModels/Create" class="btn btn-sm btn-primary bg-gradient">
                    <i class="fas fa-plus me-1"></i>Create New Model
                </a>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-hover table-striped admin-table align-middle">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 8%;">Image</th>
                            <th>Model Name</th>
                            <th>Brand</th>
                            <th>Type</th>
                            <th>Year</th>
                            <th>Configuration</th>
                            <th>Base Price</th>
                            <th class="text-center">Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach( var item in Model.VehicleModels )
                        {
                            <tr>
                                <td>
                                    <img src="@item.ImgUrl" alt="@item.ModelName" class="img-fluid rounded" style="width: 80px; height: 50px; object-fit: cover;" />
                                </td>
                                <td class="fw-bold">@Html.DisplayFor( modelItem => item.ModelName )</td>
                                <td>@Html.DisplayFor( modelItem => item.Brand )</td>
                                <td>@Html.DisplayFor( modelItem => item.VehicleType )</td>
                                <td>@Html.DisplayFor( modelItem => item.ReleaseYear )</td>
                                <td>
                                    @if( item.VehicleConfig != null )
                                    {
                                        <small class="d-block"><strong>Ver:</strong> @item.VehicleConfig.VersionName</small>
                                        <small class="d-block"><strong>Color:</strong> @item.VehicleConfig.Color</small>
                                        <small class="d-block"><strong>Interior:</strong> @item.VehicleConfig.InteriorType</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">N/A</span>
                                    }
                                </td>
                                <td class="fw-semibold">
                                    @(item.VehicleConfig?.BasePrice.ToString( "C0" ) ?? "N/A")
                                </td>
                                <td class="text-center">
                                    @if( item.IsActive )
                                    {
                                        <span class="badge bg-success bg-opacity-75">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary bg-opacity-75">Inactive</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-page="./VehicleModels/Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                    <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" onsubmit="return confirm('Are you sure you want to delete this model?');" style="display:inline;">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                        @Html.AntiForgeryToken()
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .admin-table th {
            font-weight: 600;
            font-size: 0.8rem;
            text-transform: uppercase;
            color: #475569;
        }

        .admin-table td {
            vertical-align: middle;
            font-size: 0.875rem;
        }

        .admin-table .btn-sm {
            width: 32px;
            height: 32px;
            line-height: 1.5;
            padding: 0.25rem 0.5rem;
            font-size: 0.75rem;
        }

        .badge {
            font-size: 0.75rem;
            padding: 0.4em 0.7em;
            border-radius: 8px;
            font-weight: 500;
        }
    </style>
}
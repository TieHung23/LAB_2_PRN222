@page
@model EVDMS.Presentation.Pages.Admin.VehicleModelsModel
@{
    ViewData["Title"] = "Quản lý Mẫu xe";
    Layout = "_AdminLayout"; // Đảm bảo dùng đúng Layout Admin
}

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Model.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h4 class="mb-4">@ViewData["Title"]</h4>

                <div class="d-flex align-items-center justify-content-between mb-4">
                    <a asp-page="./VehicleModels/Create" class="btn btn-success">
                        <i class="fa fa-plus me-2"></i>Thêm Mẫu xe
                    </a>
                    <form method="get" class="d-flex ms-auto">
                        <input class="form-control bg-dark border-0 me-2" type="search" placeholder="Tìm kiếm..." asp-for="SearchTerm">
                        <button class="btn btn-primary" type="submit">Tìm</button>
                    </form>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Ảnh</th>
                                <th scope="col">Tên Mẫu xe</th>
                                <th scope="col">Hãng</th>
                                <th scope="col">Loại xe</th>
                                <th scope="col">Năm SX</th>
                                <th scope="col">Cấu hình</th>
                                <th scope="col">Giá cơ bản</th>
                                <th scope="col">Trạng thái</th>
                                <th scope="col">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.VehicleModels)
                            {
                                <tr>
                                    <td>
                                        <img src="@item.ImgUrl" alt="@item.ModelName" style="max-width: 80px; height: auto; border-radius: 4px;" />
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.ModelName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Brand)</td>
                                    <td>@Html.DisplayFor(modelItem => item.VehicleType)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ReleaseYear)</td>
                                    <td>
                                        @if (item.VehicleConfig != null)
                                        {
                                            <small>
                                                Phiên bản: @item.VehicleConfig.VersionName <br />
                                                Màu: @item.VehicleConfig.Color <br />
                                                Nội thất: @item.VehicleConfig.InteriorType
                                            </small>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">Chưa có</span>
                                        }
                                    </td>
                                    <td>
                                        @(item.VehicleConfig?.BasePrice.ToString("C0") ?? "N/A")
                                    </td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success">Hoạt động</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Ngừng</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-page="./VehicleModels/Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>

                                        <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" onsubmit="return confirm('Bạn có chắc chắn muốn xóa mẫu xe này?');" style="display:inline;">
                                            <button type="submit" class="btn btn-sm btn-danger" title="Xóa">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
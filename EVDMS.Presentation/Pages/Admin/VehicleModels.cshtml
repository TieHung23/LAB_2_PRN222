@page
@model EVDMS.Presentation.Pages.Admin.VehicleModelsModel
@{
    Layout = "Shared/_AdminLayout";
    ViewData["Title"] = "Vehicle Models";
}

<div class="page-header">
    <div class="container">
        <h1><i class="fas fa-car me-3"></i>@ViewData["Title"]</h1>
        <p class="mb-0">Manage your electric vehicle catalog, configurations, and pricing.</p>
    </div>
</div>

<div class="admin-page-content">
    <div class="row">
        <div class="col-12">
            <div class="admin-card">
                <div class="card-header d-flex align-items-center justify-content-between p-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="fas fa-list-ul me-2"></i>Vehicle Model List
                    </h5>
                    <a href="/Admin/VehicleModels/Create" class="btn btn-sm btn-primary bg-gradient">
                        <i class="fas fa-plus me-1"></i> Add New Model
                    </a>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <input type="text" class="form-control form-control-sm" placeholder="Search by model name...">
                        </div>
                        <div class="col-md-3">
                            <select class="form-select form-select-sm">
                                <option selected>All Statuses</option>
                                <option value="1">Active</option>
                                <option value="2">Inactive</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-sm btn-outline-secondary w-100">Filter</button>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover table-striped admin-table">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Model Name</th>
                                    <th scope="col">Base Price</th>
                                    <th scope="col">Range (km)</th>
                                    <th scope="col">Status</th>
                                    <th scope="col" class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row">1</th>
                                    <td>VinFast VF8 Eco</td>
                                    <td>$45,000</td>
                                    <td>420</td>
                                    <td><span class="badge bg-success bg-opacity-75">Active</span></td>
                                    <td class="text-center">
                                        <a href="#" class="btn btn-sm btn-outline-info" title="Details"><i class="fas fa-eye"></i></a>
                                        <a href="#" class="btn btn-sm btn-outline-warning" title="Edit"><i class="fas fa-edit"></i></a>
                                        <a href="#" class="btn btn-sm btn-outline-danger" title="Delete"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">2</th>
                                    <td>VinFast VF9 Plus</td>
                                    <td>$62,000</td>
                                    <td>550</td>
                                    <td><span class="badge bg-success bg-opacity-75">Active</span></td>
                                    <td class="text-center">
                                        <a href="#" class="btn btn-sm btn-outline-info" title="Details"><i class="fas fa-eye"></i></a>
                                        <a href="#" class="btn btn-sm btn-outline-warning" title="Edit"><i class="fas fa-edit"></i></a>
                                        <a href="#" class="btn btn-sm btn-outline-danger" title="Delete"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">3</th>
                                    <td>VinFast VFe34</td>
                                    <td>$30,000</td>
                                    <td>300</td>
                                    <td><span class="badge bg-secondary bg-opacity-75">Inactive</span></td>
                                    <td class="text-center">
                                        <a href="#" class="btn btn-sm btn-outline-info" title="Details"><i class="fas fa-eye"></i></a>
                                        <a href="#" class="btn btn-sm btn-outline-warning" title="Edit"><i class="fas fa-edit"></i></a>
                                        <a href="#" class="btn btn-sm btn-outline-danger" title="Delete"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <nav aria-label="Page navigation" class="d-flex justify-content-end mt-3">
                        <ul class="pagination pagination-sm">
                            <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">Next</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        /* Custom styles for admin tables */
        .admin-table th {
            font-weight: 600;
            font-size: 0.8rem;
            text-transform: uppercase;
            color: #475569;
        }

        .admin-table td {
            vertical-align: middle;
            font-size: 0.875rem;
        }

        .admin-table .btn-sm {
            width: 32px;
            height: 32px;
            line-height: 1.5;
            padding: 0.25rem 0.5rem;
            font-size: 0.75rem;
        }

        .badge {
            font-size: 0.75rem;
            padding: 0.4em 0.7em;
            border-radius: 8px;
            font-weight: 500;
        }
    </style>
}
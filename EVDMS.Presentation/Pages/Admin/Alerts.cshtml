@page
@model EVDMS.Presentation.Pages.Admin.AlertsModel
@{
    Layout = "Shared/_AdminLayout";
    ViewData["Title"] = "All Alerts";
}

<div class="page-header">
    <h1><i class="fas fa-bell me-3"></i>@ViewData["Title"]</h1>
    <p>A complete log of all system alerts and notifications.</p>
</div>

<div class="admin-page-content">
    <div class="admin-card">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0 fw-bold"><i class="fas fa-list-ul me-2"></i>Alert History</h5>
        </div>
        <div class="card-body">
            <div class="alert-item mb-3">
                <div class="alert alert-warning d-flex align-items-start">
                    <div class="alert-icon me-3"><i class="fas fa-exclamation-triangle"></i></div>
                    <div class="flex-grow-1">
                        <h6 class="alert-title mb-1">Low inventory alert</h6>
                        <p class="alert-text mb-2">5 vehicles below minimum stock level</p>
                        <small class="text-muted"><i class="fas fa-clock me-1"></i>30 minutes ago</small>
                    </div>
                </div>
            </div>

            <div class="alert-item mb-3">
                <div class="alert alert-danger d-flex align-items-start">
                    <div class="alert-icon me-3"><i class="fas fa-shield-alt"></i></div>
                    <div class="flex-grow-1">
                        <h6 class="alert-title mb-1">Security notice</h6>
                        <p class="alert-text mb-2">Unusual login attempts detected</p>
                        <small class="text-muted"><i class="fas fa-clock me-1"></i>5 hours ago</small>
                    </div>
                </div>
            </div>

            <div class="alert-item mb-3">
                <div class="alert alert-success d-flex align-items-start">
                    <div class="alert-icon me-3"><i class="fas fa-check-circle"></i></div>
                    <div class="flex-grow-1">
                        <h6 class="alert-title mb-1">Backup completed</h6>
                        <p class="alert-text mb-2">Daily system backup completed successfully</p>
                        <small class="text-muted"><i class="fas fa-clock me-1"></i>3 hours ago</small>
                    </div>
                </div>
            </div>

            <div class="alert-item mb-0">
                <div class="alert alert-info d-flex align-items-start">
                    <div class="alert-icon me-3"><i class="fas fa-tools"></i></div>
                    <div class="flex-grow-1">
                        <h6 class="alert-title mb-1">System maintenance</h6>
                        <p class="alert-text mb-2">Scheduled maintenance tonight at 2:00 AM</p>
                        <small class="text-muted"><i class="fas fa-clock me-1"></i>2 hours ago</small>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
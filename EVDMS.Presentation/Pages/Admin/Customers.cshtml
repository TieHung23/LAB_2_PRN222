@page
@model EVDMS.Presentation.Pages.Admin.CustomersModel
@{
    Layout = "Shared/_AdminLayout";
    ViewData["Title"] = "Customer Management";
}

<div class="page-header">
    <div class="container">
        <h1><i class="fas fa-user-friends me-3"></i>@ViewData["Title"]</h1>
        <p>View and manage customer profiles.</p>
    </div>
</div>

<div class="admin-page-content">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="admin-card">
        <div class="card-header d-flex align-items-center justify-content-between p-3">
            <h5 class="mb-0 fw-bold"><i class="fas fa-list-ul me-2"></i>Customer List</h5>
            <a asp-page="./Customers/Create" class="btn btn-sm btn-primary bg-gradient">
                <i class="fas fa-plus me-1"></i>Create New Customer
            </a>
        </div>
        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-hover table-striped admin-table align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Address</th>
                            <th>ID Card</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Customers != null && Model.Customers.Any())
                        {
                            @foreach (var customer in Model.Customers)
                            {
                                <tr>
                                    <td>@customer.FullName</td>
                                    <td>@customer.Email</td>
                                    <td>@customer.PhoneNumber</td>
                                    <td>@customer.Address</td>
                                    <td>@customer.IdCardNumber</td>
                                    <td class="text-center">
                                        <a asp-page="./Customers/Edit" asp-route-id="@customer.Id" class="btn btn-sm btn-outline-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@customer.Id" style="display: inline;"
                                              onsubmit="return confirm('Are you sure you want to delete this customer?');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                            @Html.AntiForgeryToken()
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted">
                                    <i class="fas fa-info-circle me-2"></i>No customers found.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* CSS cho bảng giữ nguyên */
        .admin-table th {
            font-weight: 600;
            font-size: 0.8rem;
            text-transform: uppercase;
            color: #475569;
        }

        .admin-table td {
            vertical-align: middle;
            font-size: 0.875rem;
        }

        .admin-table .btn-sm {
            width: 32px;
            height: 32px;
            line-height: 1.5;
            padding: 0.25rem 0.5rem;
            font-size: 0.75rem;
        }
    </style>
}
@page
@model EVDMS.Presentation.Pages.Admin.CustomersModel
@{
    Layout = "Shared/_AdminLayout";
    ViewData["Title"] = "Customer Management";
}

<div class="page-header">
    <h1><i class="fas fa-user-friends me-3"></i>@ViewData["Title"]</h1>
    <p>View and manage customer profiles.</p>
</div>

<div class="admin-page-content">
    <div class="admin-card">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0 fw-bold"><i class="fas fa-list-ul me-2"></i>Customer List</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Address</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Customers == null || !Model.Customers.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">
                                    <i class="fas fa-info-circle me-2"></i>No customers found.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var customer in Model.Customers)
                            {
                                <tr>
                                    <td>@customer.FullName</td>
                                    <td>@customer.Email</td>
                                    <td>@customer.PhoneNumber</td>
                                    <td>@customer.Address</td>
                                    <td class="text-end">
                                        <button class="btn btn-sm btn-outline-primary" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
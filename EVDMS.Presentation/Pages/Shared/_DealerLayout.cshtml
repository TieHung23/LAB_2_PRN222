<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EVDMS Đại lý</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EVDMS.Presentation.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap"
          rel="stylesheet" />

    @await RenderSectionAsync("Styles", required: false)

    <style>
        * {
            font-family: 'Inter', sans-serif;
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            margin: 0;
            padding: 0;
        }

        /* Modern Sidebar */
        .admin-sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            width: 260px;
            background: #1c1e2f;
            padding: 20px 15px;
            transition: all 0.3s ease;
            z-index: 1000;
            overflow-y: auto;
        }

        .admin-sidebar-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .admin-sidebar-logo {
            color: #fff;
            text-decoration: none;
            font-size: 24px;
            font-weight: 700;
        }

            .admin-sidebar-logo span {
                color: #667eea;
            }

        .admin-nav-group-title {
            color: #8a99b5;
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
            padding: 0 10px 10px 10px;
            letter-spacing: 0.5px;
            margin-top: 20px;
        }

        .admin-nav-item {
            margin-bottom: 5px;
        }

        .admin-nav-link {
            display: flex;
            align-items: center;
            padding: 12px 15px;
            border-radius: 8px;
            color: #a9b3cf;
            text-decoration: none;
            font-size: 15px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

            .admin-nav-link i {
                width: 20px;
                text-align: center;
                margin-right: 15px;
                font-size: 16px;
            }

            .admin-nav-link:hover {
                background: #25283d;
                color: #fff;
            }

            .admin-nav-link.active {
                background: #2c2f48;
                color: #fff;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }

        /* Main Content */
        .admin-content {
            margin-left: 260px;
            padding: 30px;
            transition: all 0.3s ease;
        }

        .admin-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: #fff;
            padding: 15px 30px;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            margin-bottom: 30px;
        }

        .admin-header-title {
            font-size: 24px;
            font-weight: 700;
            color: #1c1e2f;
        }

        .admin-header-actions {
            display: flex;
            align-items: center;
        }

        .mobile-toggle-btn {
            display: none;
            background: none;
            border: none;
            font-size: 24px;
            color: #1c1e2f;
            cursor: pointer;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .admin-sidebar {
                left: -260px;
            }

                .admin-sidebar.show {
                    left: 0;
                }

            .admin-content {
                margin-left: 0;
            }

            .mobile-toggle-btn {
                display: block;
            }
        }
    </style>
</head>
<body>

    <div class="admin-sidebar" id="adminSidebar">
        <div class="admin-sidebar-header">
            <a asp-page="/Dealer/Index" class="admin-sidebar-logo">EVDMS<span> Đại lý</span></a>
        </div>

        <nav class="admin-nav">
            <div class="admin-nav-group">
                <span class="admin-nav-group-title">Main Menu</span>

                <div class="admin-nav-item">
                    <a class="admin-nav-link" asp-page="/Dealer/Index">
                        <i class="fas fa-home"></i>
                        <span>Bảng điều khiển</span>
                    </a>
                </div>
                <div class="admin-nav-item">
                    <a class="admin-nav-link" asp-page="/Dealer/Inventory">
                        <i class="fas fa-truck"></i>
                        <span>Kho xe</span>
                    </a>
                </div>
                <div class="admin-nav-item">
                    <a class="admin-nav-link" asp-page="/Dealer/Orders">
                        <i class="fas fa-file-invoice-dollar"></i>
                        <span>Đơn hàng</span>
                    </a>
                </div>
                <div class="admin-nav-item">
                    <a class="admin-nav-link" asp-page="/Dealer/Customers">
                        <i class="fas fa-users"></i>
                        <span>Khách hàng</span>
                    </a>
                </div>
                <div class="admin-nav-item">
                    <a class="admin-nav-link" asp-page="/Dealer/TestDrives">
                        <i class="fas fa-calendar-alt"></i>
                        <span>Lịch lái thử</span>
                    </a>
                </div>

                @if (User.IsInRole("Dealer Manager"))
                {
                    <div class="admin-nav-item">
                        <a class="admin-nav-link" asp-page="/Dealer/Staff">
                            <i class="fas fa-users-cog"></i>
                            <span>Quản lý nhân viên</span>
                        </a>
                    </div>
                }
            </div>

            @if (User.IsInRole("Dealer Manager"))
            {
                <div class="admin-nav-group">
                    <span class="admin-nav-group-title">Quản lý</span>
                    <div class="admin-nav-item">
                        <a class="admin-nav-link" asp-page="/Dealer/Reports">
                            <i class="fas fa-chart-bar"></i>
                            <span>Báo cáo</span>
                        </a>
                    </div>
                </div>
            }

            <div class="admin-nav-group">
                <span class="admin-nav-group-title">Account</span>

                <div class="admin-nav-item">
                    <a class="admin-nav-link" asp-page="/Index">
                        <i class="fas fa-globe"></i>
                        <span>Trang chủ</span>
                    </a>
                </div>

                <div class="admin-nav-item">
                    <a href="/Account/Logout" class="admin-nav-link">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Logout</span>
                    </a>
                </div>
            </div>
        </nav>
    </div>

    <div class="admin-content">

        <header class="admin-header">
            <div>
                <button class="mobile-toggle-btn" onclick="toggleSidebar()">
                    <i class="fas fa-bars"></i>
                </button>
                <h1 class="admin-header-title">@ViewData["Title"]</h1>
            </div>
            <div class="admin-header-actions">
                <span class="me-3">Xin chào, <strong>@User.Identity.Name</strong>!</span>
            </div>
        </header>

        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            var currentPath = window.location.pathname;
            // Chuẩn hóa
            if (currentPath === "/Dealer") {
                currentPath = "/Dealer/Index";
            }

            $('.admin-nav-link').each(function () {
                var linkPath = $(this).attr('href');
                if (!linkPath) return;

                // Logic tô sáng (active) mới
                // 1. Nếu link là Dashboard:
                if (linkPath === "/Dealer/Index") {
                    if (currentPath === "/Dealer/Index") {
                        $(this).addClass('active');
                    }
                }
                // 2. Nếu là các link khác:
                else if (currentPath.startsWith(linkPath)) {
                    $(this).addClass('active');
                }
            });
        });

        // Giữ nguyên JS toggle sidebar
        function toggleSidebar() {
            $('#adminSidebar').toggleClass('show');
        }

        $(document).click(function (event) {
            if ($(window).width() <= 768) {
                if (!$(event.target).closest('.admin-sidebar, .mobile-toggle-btn').length) {
                    $('#adminSidebar').removeClass('show');
                }
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
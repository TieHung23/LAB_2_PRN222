<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EVDMS Đại lý</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EVDMS.Presentation.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap"
          rel="stylesheet" />

    @await RenderSectionAsync( "Styles", required: false )

    <style>
        /* --- CSS CHO NOTIFICATION --- */
        #notification-container {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 9999;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .toast-notification {
            display: flex;
            align-items: center;
            gap: 15px;
            background-color: #2c2f48; /* Màu nền toast */
            color: #fff;
            padding: 15px 20px;
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
            min-width: 320px;
            border-left: 4px solid #667eea; /* Màu nhấn mạnh */
            opacity: 0;
            transform: translateX(100%);
            transition: transform 0.4s cubic-bezier(0.25, 0.8, 0.25, 1), opacity 0.4s ease;
        }

            .toast-notification.show {
                opacity: 1;
                transform: translateX(0);
            }

            .toast-notification i {
                font-size: 20px;
                color: #667eea;
            }

        /* --- CSS LAYOUT HIỆN TẠI CỦA BẠN --- */
        * {
            font-family: 'Inter', sans-serif;
        }

        body {
            background: #f0f2f5; /* Nền sáng hơn để dễ nhìn */
            min-height: 100vh;
            margin: 0;
            padding: 0;
        }

        .admin-sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            width: 260px;
            background: #1c1e2f;
            padding: 20px 15px;
            transition: all 0.3s ease;
            z-index: 1000;
            overflow-y: auto;
        }

        .admin-sidebar-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .admin-sidebar-logo {
            color: #fff;
            text-decoration: none;
            font-size: 24px;
            font-weight: 700;
        }

            .admin-sidebar-logo span {
                color: #667eea;
            }

        .admin-nav-group-title {
            color: #8a99b5;
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
            padding: 0 10px 10px 10px;
            letter-spacing: 0.5px;
            margin-top: 20px;
        }

        .admin-nav-item {
            margin-bottom: 5px;
        }

        .admin-nav-link {
            display: flex;
            align-items: center;
            padding: 12px 15px;
            border-radius: 8px;
            color: #a9b3cf;
            text-decoration: none;
            font-size: 15px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

            .admin-nav-link i {
                width: 20px;
                text-align: center;
                margin-right: 15px;
                font-size: 16px;
            }

            .admin-nav-link:hover {
                background: #25283d;
                color: #fff;
            }

            .admin-nav-link.active {
                background: #2c2f48;
                color: #fff;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }

        .admin-content {
            margin-left: 260px;
            padding: 30px;
            transition: all 0.3s ease;
        }

        .admin-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: #fff;
            padding: 15px 30px;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            margin-bottom: 30px;
        }

        .admin-header-title {
            font-size: 24px;
            font-weight: 700;
            color: #1c1e2f;
        }

        .admin-header-actions {
            display: flex;
            align-items: center;
        }

        .mobile-toggle-btn {
            display: none;
            background: none;
            border: none;
            font-size: 24px;
            color: #1c1e2f;
            cursor: pointer;
        }

        @@media (max-width: 768px) {
            .admin-sidebar {
                left: -260px;
            }

                .admin-sidebar.show {
                    left: 0;
                }

            .admin-content {
                margin-left: 0;
            }

            .mobile-toggle-btn {
                display: block;
            }
        }
    </style>
</head>
<body>

    <div id="notification-container"></div>

    <div class="admin-sidebar" id="adminSidebar">
        <div class="admin-sidebar-header">
            <a asp-page="/Dealer/Index" class="admin-sidebar-logo">EVDMS<span> Đại lý</span></a>
        </div>
        <nav class="admin-nav">
            <div class="admin-nav-group">
                <span class="admin-nav-group-title">Main Menu</span>

                <div class="admin-nav-item">
                    <a class="admin-nav-link" asp-page="/Dealer/Index">
                        <i class="fas fa-home"></i>
                        <span>Bảng điều khiển</span>
                    </a>
                </div>
                <div class="admin-nav-item">
                    <a class="admin-nav-link" asp-page="/Dealer/Vehicles">
                        <i class="fas fa-truck"></i>
                        <span>Kho xe</span>
                    </a>
                </div>
                <div class="admin-nav-item">
                    <a class="admin-nav-link" asp-page="/Dealer/Order">
                        <i class="fas fa-file-invoice-dollar"></i>
                        <span>Đơn hàng</span>
                    </a>
                </div>
                <div class="admin-nav-item">
                    <a class="admin-nav-link" asp-page="/Dealer/Customers">
                        <i class="fas fa-users"></i>
                        <span>Khách hàng</span>
                    </a>
                </div>
                <div class="admin-nav-item">
                    <a class="admin-nav-link" asp-page="/Dealer/TestDrives">
                        <i class="fas fa-calendar-alt"></i>
                        <span>Lịch lái thử</span>
                    </a>
                </div>

                @if( User.IsInRole( "Dealer Manager" ) )
                {
                    <div class="admin-nav-item">
                        <a class="admin-nav-link" asp-page="/Dealer/Staff/Index">
                            <i class="fas fa-users-cog"></i>
                            <span>Quản lý nhân viên</span>
                        </a>
                    </div>
                }
            </div>

            @if( User.IsInRole( "Dealer Manager" ) )
            {
                <div class="admin-nav-group">
                    <span class="admin-nav-group-title">Quản lý</span>
                    <div class="admin-nav-item">
                        <a class="admin-nav-link" asp-page="/Dealer/Reports">
                            <i class="fas fa-chart-bar"></i>
                            <span>Báo cáo</span>
                        </a>
                    </div>
                </div>
            }

            <div class="admin-nav-group">
                <span class="admin-nav-group-title">Account</span>

                <div class="admin-nav-item">
                    <a class="admin-nav-link" asp-page="/Index">
                        <i class="fas fa-globe"></i>
                        <span>Trang chủ</span>
                    </a>
                </div>

                <div class="admin-nav-item">
                    <a href="/Account/Logout" class="admin-nav-link">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Logout</span>
                    </a>
                </div>
            </div>
        </nav>
    </div>

    <div class="admin-content">
        <header class="admin-header">
            <div>
                <button class="mobile-toggle-btn" onclick="toggleSidebar()">
                    <i class="fas fa-bars"></i>
                </button>
                <h1 class="admin-header-title">@ViewData["Title"]</h1>
            </div>
            <div class="admin-header-actions">
                <span class="me-3">Xin chào, <strong>@User.Identity.Name</strong>!</span>
            </div>
        </header>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/lib/microsoft-signalr/signalr.js"></script>

    <script>
        $(document).ready(function () {

            // --- LOGIC SIGNALR ĐỂ NHẬN NOTIFICATION ---

            // 1. Tạo kết nối đến Hub của bạn
            const connection = new signalR.HubConnectionBuilder()
                .withUrl("/chatHub") // << QUAN TRỌNG: Đảm bảo đây là URL đúng của Hub
                .withAutomaticReconnect() // Tự động kết nối lại nếu mất mạng
                .build();

            // 2. Lắng nghe sự kiện "AssignVehicleSuccess" từ server
            connection.on("AssignVehicleSuccess", (message) => {
                showNotification("New Vehicle Assigned", message);
                console.log("SignalR Message Received:", message);
            });

            // 3. Hàm bắt đầu kết nối (và thử lại nếu thất bại)
            async function start() {
                try {
                    await connection.start();
                    console.log("SignalR Connected for notifications.");
                } catch (err) {
                    console.error("SignalR Connection failed: ", err);
                    setTimeout(start, 5000); // Thử lại sau 5 giây
                }
            };

            connection.onclose(async () => {
                await start();
            });

            // Bắt đầu kết nối
            start();

            // --- HÀM HIỂN THỊ NOTIFICATION ---
            function showNotification(title, message) {
                const container = document.getElementById("notification-container");
                if (!container) return; // Thoát nếu không tìm thấy container

                const notification = document.createElement("div");
                notification.className = "toast-notification";
                notification.innerHTML = `<i class="fa-solid fa-bell"></i><div><strong>${title}</strong><br/><span>${message}</span></div>`;

                container.appendChild(notification);

                // Kích hoạt animation trượt vào
                setTimeout(() => {
                    notification.classList.add("show");
                }, 10);

                // Tự động ẩn và xóa đi sau 5 giây
                setTimeout(() => {
                    notification.classList.remove("show");
                    notification.addEventListener('transitionend', () => notification.remove());
                }, 5000);
            }

            // --- CÁC SCRIPT HIỆN TẠI CỦA BẠN ---
            var currentPath = window.location.pathname;
            if (currentPath === "/Dealer") currentPath = "/Dealer/Index";

            $('.admin-nav-link').each(function () {
                var linkPath = $(this).attr('href');
                if (!linkPath) return;
                if (linkPath === "/Dealer/Index") {
                    if (currentPath === "/Dealer/Index") $(this).addClass('active');
                } else if (currentPath.startsWith(linkPath)) {
                    $(this).addClass('active');
                }
            });
        });

        // Toggle sidebar
        function toggleSidebar() {
            $('#adminSidebar').toggleClass('show');
        }

        // Đóng sidebar khi click ra ngoài trên mobile
        $(document).click(function (event) {
            if ($(window).width() <= 768) {
                if (!$(event.target).closest('.admin-sidebar, .mobile-toggle-btn').length) {
                    $('#adminSidebar').removeClass('show');
                }
            }
        });
    </script>

    @await RenderSectionAsync( "Scripts", required: false )
</body>
</html>
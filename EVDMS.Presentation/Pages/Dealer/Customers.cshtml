@page
@model EVDMS.Presentation.Pages.Dealer.CustomersModel
@{
    ViewData["Title"] = "Khách hàng";
    Layout = "_DealerLayout";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="m-0">Quản lý Khách hàng</h1>
    <a asp-page="/Dealer/CreateCustomer" class="btn btn-primary">
        <i class="fas fa-plus"></i> Tạo Khách hàng mới
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Họ tên</th>
                        <th>Số điện thoại</th>
                        <th>Email</th>
                        <th>Địa chỉ</th>
                        <th>CMND/CCCD</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model.CustomerList)
                    {
                        <tr>
                            <td>@customer.FullName</td>
                            <td>@customer.PhoneNumber</td>
                            <td>@customer.Email</td>
                            <td>@customer.Address</td>
                            <td>@customer.IdCardNumber</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
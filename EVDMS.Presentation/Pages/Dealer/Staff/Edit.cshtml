@page "{id:guid}"
@model EVDMS.Presentation.Pages.Dealer.Staff.EditModel
@{
    ViewData["Title"] = "Chỉnh sửa nhân viên";
    Layout = "~/Pages/Shared/_DealerLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-warning text-dark">
            <h4><i class="fas fa-user-edit"></i> Cập nhật thông tin nhân viên</h4>
        </div>

        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="Staff.Id" />

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Staff.FullName" class="form-label">Họ và tên</label>
                    <input asp-for="Staff.FullName" class="form-control" />
                    <span asp-validation-for="Staff.FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Staff.Email" class="form-label">Email</label>
                    <input asp-for="Staff.Email" class="form-control" />
                    <span asp-validation-for="Staff.Email" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Staff.IsActive" />
                    <label class="form-check-label" asp-for="Staff.IsActive">Kích hoạt tài khoản</label>
                </div>

                <button type="submit" class="btn btn-primary">Cập nhật</button>
                <a asp-page="/Dealer/Staff/Index" class="btn btn-secondary ms-2">Hủy</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

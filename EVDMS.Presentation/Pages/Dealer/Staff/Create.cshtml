@page
@model EVDMS.Presentation.Pages.Dealer.Staff.CreateModel
@{
    ViewData["Title"] = "Add Staff";
    Layout = "~/Pages/Shared/_DealerLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white">
            <h4><i class="fas fa-user-plus"></i> Add New Staff</h4>
        </div>

        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Staff.FullName" class="form-label">Full Name</label>
                    <input asp-for="Staff.FullName" class="form-control" />
                    <span asp-validation-for="Staff.FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Staff.Email" class="form-label">Email</label>
                    <input asp-for="Staff.Email" class="form-control" />
                    <span asp-validation-for="Staff.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Staff.HashedPassword" class="form-label">Default Password</label>
                    <input asp-for="Staff.HashedPassword" class="form-control" value="123456" readonly />
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Staff.IsActive" checked />
                    <label class="form-check-label" asp-for="Staff.IsActive">Active</label>
                </div>

                <button type="submit" class="btn btn-success">Save</button>
                <a asp-page="/Dealer/Staff/Index" class="btn btn-secondary ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
